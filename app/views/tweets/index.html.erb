<span class="nav-buttons">
  <%= button_to "View Rejected Tweets", { action: "rejected"}, {:method => :get, class: "view-rejected btn btn-danger"}%>
</span>
<span class="nav-buttons">
  <%= button_to "View Completed Tweets", { action: "done"}, {:method => :get, class: "view-completed btn btn-primary"}%>
</span>
<span class="nav-buttons">
  <%= button_to "View Saved Tweets", { action: "favorited"}, {:method => :get, class: "view-saved btn btn-success"}%>
</span>
<span class="nav-buttons">
  <%= button_to "View Pending Tweets", { action: "index"}, {:method => :get, class: "view-tweets btn btn-info",
    :disabled => true}%>
</span>
<span class="nav-buttons">
  <%= button_to "Fetch new tweets", { action: "fetch_tweets"}, {:method => :get, class: "view-tweets btn btn-info"}%>
</span>

<table class="table">
  <thead class="table-row">
    <tr>
      <th>
        #
      </th>
      <th>
        Text
      </th>
      <th>
        Link to Tweet
      </th>
      <th>
        User
      </th>
      <th>
        Number of Followers
      </th>
      <th>
        Retweet Count
      </th>
      <th>
        Created On
      </th>
      <th>
        Reject
      </th>
      <th>
        Mark as Completed
      </th>
      <th>
        Save
      </th>
    </tr>
  </thead>
  <% @tweets.each_with_index do |tweet, index| %>
    <tr class="table-row">
      <td>
        <%= index + 1 %>
      </td>
      <td class="tweet-text">
        <%= tweet.tweet_text %>
      </td>
      <td class="tweet-link">
        <%=link_to "Link", tweet.source_url, :target => "_blank" %>
      </td>
      <td class="tweet-user-data">
        <%= tweet.user %>
      </td>
      <td class="tweet-user-followers">
        <%= tweet.users_followers %>
      </td>
      <td class="tweet-retweet-count">
        <%= tweet.retweet_count %>
      </td>
      <td class="tweet-date">
        <%= tweet.formatted_date %>
      </td>
      <td class="reject-tweet">
        <%= button_to "Reject", { action: "mark_rejected", id: tweet.id }, {class: "btn btn-danger"}%>
      </td>
      <td class="tweet-done">
        <%= button_to "Complete", { action: "mark_done", id: tweet.id }, {class: "btn btn-primary"}%>
      </td>
      <td class="tweet-saved">
        <%= button_to "Save", { action: "mark_favorited", id: tweet.id }, {class: "btn btn-success"}%>
      </td>
    </tr>
  <% end %>
</table>